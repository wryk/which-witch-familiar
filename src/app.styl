color-background = #191b22
color-input-background = #282c37
color-text = #ffffff
color-main = #a288bd
color-invalid = #9f6000
color-valid = #4f8a10

html
	box-sizing border-box

*, *:before, *:after
	box-sizing inherit

body
	display grid
	grid-gap 10px 15px
	grid-template-columns 1fr
	grid-template-areas\
		"header"\
		"main"\
		"aside"\
		"footer"

	max-width 100vw
	min-height 100vh

	margin 0 auto
	padding 15px

	background color-background
	color color-text

h1
	font-size 2.5em
	text-align center

h2
	font-size 1.5em

.familiar
	header
		font-size 2.2em

	p
		font-size 1.2em

.header
	grid-area header
	justify-self center
	align-self center

.aside
	grid-area aside

.main
	grid-area main

.footer
	grid-area footer
	justify-self center
	align-self end

	display flex
	flex-flow column nowrap

a
	text-decoration none
	color color-main

b
	color color-main

form
	display flex
	flex-flow column nowrap

	&:invalid button
		cursor not-allowed
		background grey

label
	flex 1 0
	padding 10px

input
	flex 1 0
	color color-text
	outline 0
	display block
	border none
	padding 10px
	background color-input-background
	color color-text
	font-size 14px
	margin 0

	&:not(:placeholder-shown)
		color color-invalid

	&:valid
		color color-valid

button
	flex 1 0
	padding 0 16px
	height 44px
	line-height 44px
	background-color color-main
	border 10px none
	cursor pointer
	color color-text
	white-space nowrap

// LARGE DISPLAY
@media (min-width: 768px)
	body
		grid-template-columns 3fr 1fr
		grid-template-areas\
			"header header"\
			"main aside"\
			"footer footer"

		font-size 1.2em

	h1
		font-size 4em

	h2
		font-size 2em

	.familiar
		header
			font-size 3em

		p
			font-size 1.4em

	.footer
		flex-flow row
